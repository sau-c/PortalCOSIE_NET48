<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - PortalCOSIE</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

    <style>
        body {
            background: #5A1236;
        }

        .auth-container {
            min-height: 90vh;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .auth-card {
            background-color: #fff;
            padding: 40px 60px;
            border-radius: 12px;
            box-shadow: 0 8px 30px rgba(0,0,0,0.1);
            max-width: 420px;
        }

        .auth-header {
            text-align: center;
            margin-bottom: 30px;
        }

        .form-text a {
            color: #6A1B4D;
            text-decoration: none;
            font-weight:500;
        }

            .form-text a:hover {
                text-decoration: underline;
            }

        footer {
            text-align: center;
            color: #eee;
            font-size: 0.9em;
        }
    </style>
</head>
<body>
    <div class="auth-container">
        <div class="auth-card">
            @RenderBody()
        </div>
    </div>
    <footer>
        <p>© @DateTime.Now.Year - PortalCOSIE.</p>
    </footer>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
