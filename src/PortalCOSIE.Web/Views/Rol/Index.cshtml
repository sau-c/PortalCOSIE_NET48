@model IEnumerable<PortalCOSIE.Domain.Entities.Rol>
@{
    ViewBag.Title = "Roles";
}

<div class="card shadow">
    <div class="card-header">
        <div class="d-flex align-items-center justify-content-between flex-wrap">
            <!-- Título a la izquierda -->
            <h6 class="mb-0 fw-bold">Gestión de roles</h6>

            <!-- Contenedor alineado a la derecha y compacto -->
            <div class="d-flex align-items-center ms-auto gap-2">
                <input type="text" id="globalSearch" class="form-control-sm" placeholder="Filtrar palabras clave...">
                <a href="@Url.Action("Crear", "Rol")" class="btn btn-primary btn-sm shadow-sm">
                    <i class="fas fa-plus me-2"></i>Nuevo
                </a>
            </div>
        </div>
    </div>

    <div class="card-body overflow-auto" style="height: calc(100vh - 150px);">
        <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 g-4">

            @foreach (var item in Model)
            {
                <div class="col role-card">
                    <div class="card shadow">
                        @*Header de la card*@
                        <div class="card-header d-flex align-items-center justify-content-between">
                            <div class="d-flex align-items-center">
                                <i class="fas fa-user-shield fa-lg me-2"></i>
                                <h6 class="mb-0">@item.Nombre</h6>
                            </div>
                            <div class="d-flex align-items-center gap-2">
                                <span class="badge bg-success">Activo</span>
                                <i class="fas fa-info-circle" data-bs-toggle="tooltip"
                                   title="Creado: @Html.DisplayFor(modelItem => item.CreatedBy) (@Html.DisplayFor(modelItem => item.CreatedAt))&#10;Modificado: @Html.DisplayFor(modelItem => item.UpdatedBy) (@Html.DisplayFor(modelItem => item.UpdatedAt))"></i>
                            </div>
                        </div>
                        @*Cuerpo de la card*@
                        <div class="card-body d-flex flex-column">
                            <div>
                                <p class="fw-semibold mb-2 text-muted">Descripcion:</p>
                                <div class="d-flex flex-wrap gap-2">
                                    <p>@item.Descripcion</p>
                                </div>
                            </div>
                            <div>
                                <p class="fw-semibold mb-2 text-muted">Permisos:</p>
                                <div class="d-flex flex-wrap gap-2">
                                    @foreach (var permiso in item.Permisos)
                                    {
                                        <span class="badge bg-secondary rounded-pill px-3 py-2">@permiso.Accion: @permiso.Controlador</span>
                                    }
                                </div>
                            </div>
                        </div>
                        @*Footer*@
                        <div class="card-footer bg-body d-flex justify-content-end gap-2">
                            <a href="@Url.Action("Editar", "Rol", new { id = item.Id })" class="btn btn-outline-primary btn-sm">
                                <i class="fas fa-edit me-1"></i>Editar
                            </a>
                            @* BOTON DE ELIMINACION QUE ACTIVA EL MODAL PARA LA CONFIRMACION DE LA ELIMINACION *@
                            <button type="button" class="btn btn-outline-danger btn-sm"
                                    data-bs-toggle="modal"
                                    data-bs-target="#deleteModal"
                                    data-role-id="@item.Id"
                                    data-role-name="@item.Nombre">
                                <i class="fas fa-trash-alt me-1"></i>Eliminar
                            </button>

                        </div>
                    </div>
                </div>
            }

        </div>
    </div>
</div>

<!-- Modal de Confirmación de Eliminación -->
<div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <form id="deleteForm" method="post" action="@Url.Action("Eliminar", "Rol")">
                @Html.AntiForgeryToken()
                <div class="modal-header text-bg-danger">
                    <h5 class="modal-title" id="deleteModalLabel">Confirmar eliminación</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Cerrar"></button>
                </div>
                <div class="modal-body">
                    <p>¿Estás seguro de que deseas eliminar el rol <strong id="roleName"></strong> y remover sus permisos asignados?</p>
                    <p>Primero asegurate de que no existan usuarios con este rol</p>
                    <input type="hidden" name="id" id="roleId" />
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                    <button type="submit" class="btn btn-danger">Eliminar</button>
                </div>
            </form>
        </div>
    </div>
</div>


@section scripts {
    <script type="text/javascript">
        $(function () {
            //Barra de busqueda
            $('#globalSearch').on('keyup', function () {
                let searchTerm = $(this).val().toLowerCase();

                $('.role-card').each(function () {
                    // Buscar en todo el contenido excepto el footer
                    const text = $(this).find('.card > :not(.card-footer)').text().toLowerCase();
                    $(this).toggle(text.includes(searchTerm));
                });
            });

            //Dialogo de eliminacion (Aqui se ejecuta la operacio real de eliminar)
            $('#deleteModal').on('show.bs.modal', function (event) {
                const button = $(event.relatedTarget); // Botón que disparó el modal
                const roleId = button.data('role-id');
                const roleName = button.data('role-name');

                const modal = $(this);
                modal.find('#roleName').text(roleName);
                modal.find('#roleId').val(roleId);
            });
        });
    </script>
}
