@{
    ViewBag.Title = "Dashboard";
}

<div class="container-fluid py-1">
    <div class="row g-4">

        <!-- Gráfico de líneas -->
        <div class="col-lg-6">
            <div class="card shadow">
                <div class="card-header">
                    <h6 class="mb-0 fw-bold">Usuarios registrados por mes</h6>
                </div>
                <div class="card-body">
                    <canvas id="lineChart"></canvas>
                </div>
            </div>
        </div>

        <!-- Gráfico de barras -->
        <div class="col-lg-6">
            <div class="card shadow">
                <div class="card-header">
                    <h6 class="mb-0 fw-bold">Documentos por categoría</h6>
                </div>
                <div class="card-body">
                    <canvas id="barChart"></canvas>
                </div>
            </div>
        </div>

        <!-- Gráfico de pastel -->
        <div class="col-lg-6">
            <div class="card shadow">
                <div class="card-header">
                    <h6 class="mb-0 fw-bold">Distribución de roles</h6>
                </div>
                <div class="card-body">
                    <canvas id="pieChart"></canvas>
                </div>
            </div>
        </div>

        <!-- Gráfico de radar -->
        <div class="col-lg-6">
            <div class="card shadow">
                <div class="card-header">
                    <h6 class="mb-0 fw-bold">Accesos por módulo</h6>
                </div>
                <div class="card-body">
                    <canvas id="radarChart"></canvas>
                </div>
            </div>
        </div>

    </div>
</div>

@section scripts {
    <script>
        // Línea
        new Chart(document.getElementById("lineChart"), {
            type: 'line',
            data: {
                labels: ["Ene", "Feb", "Mar", "Abr", "May", "Jun"],
                datasets: [{
                    label: "Usuarios",
                    data: [5, 10, 8, 12, 20, 15],
                    borderColor: "rgba(75,192,192,1)",
                    fill: true,
                    tension: 0.4,
                    backgroundColor: "rgba(75,192,192,0.2)"
                }]
            }
        });

        // Barras
        new Chart(document.getElementById("barChart"), {
            type: 'bar',
            data: {
                labels: ["Reportes", "Tareas", "Cartas", "Contratos"],
                datasets: [{
                    label: "Cantidad",
                    data: [12, 19, 3, 5],
                    backgroundColor: ["#0d6efd", "#6610f2", "#198754", "#fd7e14"]
                }]
            }
        });

        // Pastel
        new Chart(document.getElementById("pieChart"), {
            type: 'pie',
            data: {
                labels: ["Administrador", "Editor", "Usuario"],
                datasets: [{
                    data: [10, 25, 65],
                    backgroundColor: ["#dc3545", "#ffc107", "#0d6efd"]
                }]
            }
        });

        // Radar
        new Chart(document.getElementById("radarChart"), {
            type: 'radar',
            data: {
                labels: ["Inicio", "Documentos", "Usuarios", "Reportes", "Configuración"],
                datasets: [{
                    label: "Visitas",
                    data: [20, 10, 15, 25, 8],
                    backgroundColor: "rgba(13, 110, 253, 0.2)",
                    borderColor: "#0d6efd"
                }]
            }
        });
    </script>
}